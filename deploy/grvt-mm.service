[Unit]
Description=GRVT AS Market Maker
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/grvt-mm/backend
EnvironmentFile=/opt/grvt-mm/backend/.env
ExecStart=/opt/grvt-mm/backend/.venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 18081
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target



